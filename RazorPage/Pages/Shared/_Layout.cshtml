@using Microsoft.AspNetCore.Mvc;
<!DOCTYPE html>
<html  dir="rtl" lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HamedLibrary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPage.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-toggleable-md navbar-toggleable-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
           
            <div class="container">
                 <div class="nav-item justify-content-end"><i class="bi bi-book text-white"></i></div>
                <a class="navbar-brand" asp-area="" asp-page="/Index">HamedLibrary</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class=" collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                    <ul class="navbar-nav justify-content-between">
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Create">امانت</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">قوانین</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Login">ورود</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="h-75 container-lg">
            @RenderBody()
    </div>

    <footer class= "footer">
        <div class="text-center text-muted mt-4">
            &copy; 2022 - HamedLibrary - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>